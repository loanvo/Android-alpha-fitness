<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs175.alphafitness.ProfileScreen">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/pro_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_green_light"
                android:drawableTop="@drawable/profile"
                android:padding="10dp" />

            <TextView
                android:id="@+id/name_view"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:hint="name"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Gender:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/gender_view"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:textAlignment="center"
                ></TextView>
            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Weight:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/weight_view"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/box"
                android:textAlignment="center"
                ></TextView>
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="lbs"
                android:gravity="center"
                ></TextView>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp">
            <TextView
                android:text="Average/Weekly"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="13dp"
                android:gravity="center"/>
        </TableRow>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Distance"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/week_workout_distance_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="km"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Time"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/week_time_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="sec"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Workouts"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/week_workout_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="times"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Calories Burned"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/week_calo_view"
                    android:layout_width="100dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Cal"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

        </TableLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7dp">
            <TextView
                android:text="All Time"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="13dp"
                android:gravity="center"/>
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Distance"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/workout_distance_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="km"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Time"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/time_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="sec"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Workouts"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/workout_view"
                    android:layout_width="200dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="times"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

            <TableRow
                android:background="@drawable/box"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:text="Calories Burned"
                    android:textColor="@android:color/black"
                    android:padding="13dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/calo_view"
                    android:layout_width="100dp"
                    android:layout_gravity="end"
                    android:paddingTop="13dp"
                    android:textAlignment="textEnd"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Cal"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"/>

            </TableRow>

        </TableLayout>



    </TableLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
