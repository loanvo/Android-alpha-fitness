<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portrait_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="cs175.alphafitness.RecordWorkout"
    tools:showIn="@layout/activity_record_workout">

    <fragment
        android:id="@+id/fragment1"
        class="cs175.alphafitness.PortraitFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/portrait_fragment">

    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="420dp"></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/start_button"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_light"
            android:text="Start Workout" />
    </LinearLayout>

</LinearLayout>